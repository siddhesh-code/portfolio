# Email SMTP
MAIL_ENABLED=1
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=siddheshdhoot99@gmail.com
MAIL_PASSWORD=abmssgkgrapdstog   # Gmail App Password (16 chars)
MAIL_FROM=siddheshdhoot99@gmail.com
MAIL_TO=siddheshdhoot99@gmail.com
MAIL_SUBJECT_PREFIX=[Plutus]

# Email content defaults
REVERSALS_EMAIL_UNIVERSE=n50       # n50|n500|watch
REVERSALS_EMAIL_MIN_SCORE=10        # set >0 to filter
REVERSALS_EMAIL_TOP_N=12

# Inbound email command trigger (IMAP poller)
MAIL_COMMANDS_ENABLED=0
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=1
MAIL_COMMAND_TRIGGER_SUBJECT=plutus
# Restrict who can trigger actions (comma-separated emails). Empty = allow any
MAIL_COMMAND_ALLOWED_SENDERS=
# Reply to sender instead of MAIL_TO
MAIL_COMMAND_REPLY_TO_SENDER=1
# Poll interval seconds
MAIL_COMMAND_POLL_INTERVAL=60
# Verbose logging
MAIL_COMMAND_DEBUG=1
